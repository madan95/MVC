                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Details", "RedirectDetail", new { id=item.UserID})
                    @Html.ActionLink("Delete", "DeleteUserInEvent", new {id2=item.UserID, id3=Model.EventID})
                </td>
            </tr>
        }

    </table>
    <p>
        @Html.ActionLink("Back to List", "Index")
